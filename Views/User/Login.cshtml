
<!-- LOGIN START -->
<div class="wrapper">
    <div class="form-box register">
        <h3>Login</h3>
        <form method="post">
            <div class="input-box">
                <label for="emailLogin" class="label-text">Email Address</label>
                <input type="email"
                       id="emailLogin"
                       name="emailLogin"
                       required />
                <p class="error-msg" id="error_msg_login_email"></p>
            </div>

            <div class="input-box">
                <label for="passwordLogin" class="label-text">Password</label>
                <input type="password"
                       id="passwordLogin"
                       name="passwordLogin"
                       required />
                <p class="error-msg" id="error_msg_login_password"></p>
            </div>

            <div class="input-box">
                <label class="checkbox">
                    <input type="checkbox" name="agree" id="agree" />
                </label>
                <span class="remember-text">Remember Me</span>
                <p class="error-msg" id="error_msg_login_remember"></p>
            </div>

            <div class="input-box">
                <a href="" class="forgot-pw">
                    Forgot Your Password?
                </a>
            </div>

            <button type="submit"
                    onclick="validateFormLogin(event)"
                    class="btnLogin">
                Login
            </button>
        </form>
    </div>
</div>
<!-- LOGIN END -->