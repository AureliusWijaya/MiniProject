@model Category

<form method="post" asp-action="DeleteConfirmed">

    <h2 class="Task">Delete Category</h2>
    <input type="hidden" asp-for="CategoryId" />
    <div class="input-box">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="error-msg"></span>
    </div>
    <button type="submit" class="btnC">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btnC">Go back</a>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

