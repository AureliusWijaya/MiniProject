@model Category

<form method="post">
  
        <h2 class="Task">Create Category</h2>
        <div class="input-box">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" class="form-control"/>
            <span asp-validation-for="CategoryName" class="error-msg"></span>
        </div>
        <button type="submit" class="btnC">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btnC">Go back</a>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

