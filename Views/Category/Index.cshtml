@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h2 class="titleCat">Product Categories</h2>
<br />
<br />
<a asp-controller="Category" asp-action="Create" class="btnAdd">
    Add Category
</a>
<br/><br/>

<table class="table">
    <thead>
        <tr>
            <th>
                Category ID
            </th>
            <th>
                Category Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbdody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.CategoryId
                </td>
                <td width="30%">
                    @obj.CategoryName
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-CategoryId="@obj.CategoryId" class="btn btn-warning">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-CategoryId="@obj.CategoryId"  class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbdody>
</table>